<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.wwg.plan.dao.MybatisItemDao">

    <insert id="insertItems" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="idx">
        insert into item_spot (title, info, lat,lng,address,photo,phone) values
        <foreach collection="list" item="item" separator=",">
            ("#{item.title}", "#{item.info}", #{item.lat}, #{item.lng}, "#{item.address}", "#{item.photo}", "#{item.phone}")
        </foreach>
    </insert>

    <delete id="deleteAllItems">
        delete from item_spot
    </delete>

</mapper>